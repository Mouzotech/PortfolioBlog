---
import Layout from "../layouts/Layout.astro";
import Newsletter from "../components/Newsletter.svelte";
import Features from "./home/_Features.svelte";
import FeatureHero from "./home/_FeatureHero.svelte";
import LatestPosts from "../components/LatestPosts.astro";
import Projects from "../layouts/Projects.astro";
import Education from "../layouts/Education.svelte";
---

<Layout title="Raspivan Blog">
  <main class="bg-transparent">
    <div class="w-full">
      <FeatureHero client:load />
      <Projects/>
      <Features client:load/>      
      <Education/>
      <LatestPosts fullWidth={false} animated={true} />
